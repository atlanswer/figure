{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "types": ["vite/client"],
    "rootDir": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./public/*"]
    }
  }
}
