{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "checkJs": true,
    "paths": {
      "~/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next-env.d.ts"],
  "exclude": ["src-old/**/*.ts", "src-old/**/*.tsx"]
}
